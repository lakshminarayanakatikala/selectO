<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>API List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f9fafb;
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

        th,
        td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: #f3f4f6;
        }

        tr:hover {
            background: #f1f5f9;
        }

        code {
            background: #f1f5f9;
            padding: 2px 5px;
            border-radius: 4px;
        }
    </style>
</head>

<body>
    <h1>API Endpoints</h1>

    <table>
        <thead>
            <tr>
                <th>Method</th>
                <th>Endpoint</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% apiList.forEach(api=> { %>
                <tr>
                    <td><strong>
                            <%= api.method %>
                        </strong></td>
                    <td><code><%= api.path %></code></td>
                    <td>
                        <%= api.desc %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>